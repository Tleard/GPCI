            </ul>
        </nav>

        <!-- Page Content  -->
        <div id="content">
            <button type="button" id="sidebarCollapse" class="btn btn-info mb-4">
                <i class="fas fa-align-left"></i>
                <span>Toggle Sidebar</span>
            </button>
            <br>
            <h1>Créer un cours</h1>
            {{ form_start(form) }}
            <div class="form-row">
                <div class="col-md-4">
                    <div class="input-group-desc">
                        <div class="input-group-desc">
                            {{ form_widget(form.beginAt, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <label class="label--desc">{{ form_label(form.beginAt) }}</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="input-group-desc">
                        <div class="input-group-desc">
                            {{ form_widget(form.endAt, {'attr': {'id': 'form-control'}}) }}
                        </div>
                        <label class="label--desc">{{ form_label(form.endAt) }}</label>
                    </div>
                </div>

            </div>
                {#<div class="col-md-4">
                    <div class="input-group-desc">
                        <div class="input-group-desc">
                            {{ form_widget(form.group, {'attr': {'class': 'select'}}) }}
                        </div>
                        <label class="label--desc">{{ form_label(form.group) }}</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="input-group-desc">
                        <div class="input-group-desc">
                            {{ form_widget(form.roles, {'attr': {'class': 'select'}}) }}
                        </div>
                        <label class="label--desc">{{ form_label(form.roles) }}</label>
                    </div>
                </div>#}
            {{ form_widget(form) }}
            <input type="submit" value="Create" />
            {{ form_end(form) }}


        </div>
    </div>


